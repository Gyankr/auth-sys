<div id="reset-password-container">
  <% if(resetPasswordToken.isValid){ %>
    <h2>Reset Password</h2>
    <span>Choose a password atleast 6 characters long</span>
    <form class="form-style" action="/users//create-new-password" method="POST">
      <input type="password" id="password" name="password" placeholder="Password" required>
      <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirm password" required>
      <input type="hidden" name="accessToken" value="<%= resetPasswordToken.accessToken %>">
      <input type="submit" value="Reset Password">
    </form>
  <% }else{ %>
    <br>
    <br>
    <p>Password reset link expired. <a href="/users/forgot-password">Click here</a> to generate a new one</p>
  <% } %>

</div>